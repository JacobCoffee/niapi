# Default
*               text=auto
# Text Files
*.css           text diff=css
*.gradle        text diff=java
*.gradle.kts    text diff=kotlin
*.groovy        text diff=java
*.htm           text diff=html
*.html          text diff=html
*.jardesc	    text
*.java          text diff=java
*.js            text eol=lf
*.json          text
*.kt            text diff=kotlin
*.md            text
*.pom	        text
*.prefs	        text
*.properties    text
*.sh            text eol=lf
*.sql           text eol=lf
*.txt           text
*.xml           text
*.yml           text eol=lf
# LFS - Archives
*.7z            filter=lfs diff=lfs merge=lfs -text
*.br            filter=lfs diff=lfs merge=lfs -text
*.gz            filter=lfs diff=lfs merge=lfs -text
*.tar           filter=lfs diff=lfs merge=lfs -text
*.zip           filter=lfs diff=lfs merge=lfs -text
*.zst           filter=lfs diff=lfs merge=lfs -text
*.xz           filter=lfs diff=lfs merge=lfs -text
*.bz2           filter=lfs diff=lfs merge=lfs -text
# LFS - Images
*.gif           filter=lfs diff=lfs merge=lfs -text binary
*.ico           filter=lfs diff=lfs merge=lfs -text binary
*.jpg           filter=lfs diff=lfs merge=lfs -text binary
*.pdf           filter=lfs diff=lfs merge=lfs binary
#*.png           filter=lfs diff=lfs merge=lfs binary
*.tiff          filter=lfs diff=lfs merge=lfs binary
*.webp          filter=lfs diff=lfs merge=lfs -text binary
# LFS - Binaries
*.bin           filter=lfs diff=lfs merge=lfs binary
